<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sais.furahabaraka">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FurahaBaraka"
        tools:targetApi="31">
        <activity
            android:name="com.sais.furahabaraka.activities.HomePageActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FurahaBaraka.NoActionBar" />
        <activity
            android:name="com.sais.furahabaraka.activities.ForgotPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name="com.sais.furahabaraka.activities.MyProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name="com.sais.furahabaraka.activities.SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/CustomNoActionBarTheme" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />

        <activity
            android:name="com.sais.furahabaraka.activities.MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps"
            android:theme="@style/Theme.FurahaBaraka.NoActionBar" />
        <activity
            android:name="com.sais.furahabaraka.activities.TreeDetailActivity"
            android:exported="false"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name="com.sais.furahabaraka.activities.VisitDetailActivity"
            android:exported="false"
            android:theme="@style/CustomNoActionBarTheme" />

        <activity
            android:name="com.sais.furahabaraka.activities.VisitRegistration"
            android:exported="false"
            android:theme="@style/CustomNoActionBarTheme" />

        <activity
            android:name="com.sais.furahabaraka.activities.SignInActivity"
            android:exported="false"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name="com.sais.furahabaraka.activities.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FurahaBaraka.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sais.furahabaraka.activities.BaseActivity"
            android:exported="false" />
        <activity
            android:name="com.sais.furahabaraka.activities.FieldDetailActivity"
            android:exported="false"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name="com.sais.furahabaraka.activities.TreeRegistration"
            android:exported="false"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name="com.sais.furahabaraka.activities.FieldRegistration"
            android:exported="false"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name="com.sais.furahabaraka.activities.AccessData"
            android:exported="false"
            android:theme="@style/CustomNoActionBarTheme" />
    </application>

</manifest>